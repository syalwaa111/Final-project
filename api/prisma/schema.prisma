// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user                   Int     @id @default(autoincrement())
  email                     String  @unique
  name                      String?
  user_education_history    User_education_history    @relation(fields: [id_user_education], references: [id_user_education])
  id_user_education         Int
}

model User_education_history {
  id_user_education         Int     @id @default(autoincrement())
  pendidikan_terakhir       String
  tahun_mulai               DateTime
  tahun_selesai             DateTime
  nilai                     Float
  organisasi                String
  users                     User[]
}

model User_job_history {
   id                        Int                    @id @default(autoincrement())
  pekerjaan_terdahulu       String
  perusahaan_terdahulu      String
  tahun_mulai               DateTime
  tahun_selesai             DateTime
  pengalaman_kerja          String
  keahlian                  String
  userId                    Int
  user                      User                   @relation("UserJob", fields: [userId], references: [id])

}

model Job {
  id_job                    Int     @id @default(autoincrement())


}

model Job_category {
  id_job_category           Int     @id @default(autoincrement())
  nama_category             String
  jobId                       Job[]    @relation("UserJobCategory", fields: [id], references: [jobCategoryId])

}

model Company {
  id_company                Int     @id @default(autoincrement())
  nama_perusahaan           String
}

model Admin {
  id_admin                  Int     @id @default(autoincrement())
}

model Application {
  id_application            Int     @id @default(autoincrement())
}